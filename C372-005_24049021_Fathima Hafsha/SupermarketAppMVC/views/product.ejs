<%- include("partials/header"); %>

<div class="row mt-4">

    <div class="col-md-5">
        <img src="/images/<%= product.image %>" 
             class="img-fluid rounded shadow-sm"
             style="max-height: 350px; object-fit: cover;">
    </div>

    <div class="col-md-7">
    
        <h2 class="fw-bold">
            <%= product.productName %>
        </h2>
        
        <p class="mt-3">
            <strong>Price:</strong>
            <span class="text-success fw-bold">$<%= product.price.toFixed(2) %></span>
        </p>
        
        <p>
            <strong>Stock:</strong>
            <% if (product.quantity===0) { %>
                <p class="text-danger">This item is currently out of stock.</p>
                <button class="btn btn-secondary" disabled>Out of Stock</button>
                <% } else { %>
                    <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-flex">
                        <input type="number" name="quantity" min="1" value="1" class="form-control me-2">
                        <button class="btn btn-success">
                            <i class="bi bi-cart-plus me-1"></i> Add to Cart
                        </button>
                    </form>
                    <% } %>
        
                        <a href="/shopping" class="btn btn-outline-secondary mt-3 w-100">Back to Store</a>
    </div>

</div>

<%- include("partials/footer"); %>
