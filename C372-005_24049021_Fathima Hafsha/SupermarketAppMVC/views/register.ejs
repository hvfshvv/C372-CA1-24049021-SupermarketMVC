<%- include("partials/header"); %>

    <!-- HERO BANNER -->
    <div class="login-hero d-flex align-items-center justify-content-center">
        <h2 class="fw-bold text-darkgrey">Create an Account</h2>
    </div>

    <!-- MAIN REGISTER CARD -->
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card p-4 shadow-sm">
                    <h3 class="fw-bold text-center mb-4">Register</h3>

                    <% if (messages.error) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                        <% } %>

                            <form action="/register" method="POST">

                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <input type="text" name="username" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" name="password" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Address</label>
                                    <input type="text" name="address" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Contact Number</label>
                                    <input type="text" name="contact" class="form-control" required>
                                </div>

                                <input type="hidden" name="role" value="user">

                                <button class="btn btn-success w-100 fw-bold">Register</button>
                            </form>

                            <p class="mt-3 text-center">
                                Already have an account? <a href="/login">Login</a>
                            </p>

                </div>

            </div>
        </div>
    </div>

    <%- include("partials/footer"); %>