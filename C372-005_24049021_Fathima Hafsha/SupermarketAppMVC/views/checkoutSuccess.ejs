<%- include("partials/header"); %>

<div class="container mt-5" style="max-width: 850px;">

    <div class="text-center mb-4">
        <h2 class="fw-bold">ðŸŽ‰ Payment Successful</h2>
        <p class="text-muted">Thank you for shopping with us, <%= user.username %>!</p>
    </div>

    <% if (order) { %>
    <div class="card shadow-lg p-4 rounded-4">

        <h5 class="fw-bold text-primary mb-3">Order Details</h5>

        <div class="bg-light rounded-4 p-3 mb-3">
            <p class="mb-1">Order ID: <strong>#<%= order.id %></strong></p>
            <p class="mb-0">Placed On: <%= new Date(order.order_date).toLocaleString() %></p>
        </div>

        <h5 class="fw-bold text-primary">Order Summary</h5>

        <div class="table-responsive mt-3">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Price ($)</th>
                        <th>Qty</th>
                        <th>Total ($)</th>
                    </tr>
                </thead>

                <tbody>
                    <% items.forEach(i => { %>
                    <tr>
                        <td><%= i.product_name %></td>
                        <td><%= Number(i.price).toFixed(2) %></td>
                        <td><%= i.quantity %></td>
                        <td><%= (i.price * i.quantity).toFixed(2) %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <h4 class="text-end fw-bold mt-3">
            Grand Total: $<%= Number(order.total_amount).toFixed(2) %>
        </h4>

        <div class="text-center mt-4">
            <a href="/invoice/<%= order.id %>" class="btn btn-primary px-4 rounded-4">Download Invoice</a>
            <a href="/orders" class="btn btn-outline-secondary px-4 rounded-4 ms-2">View Orders</a>
            <a href="/shopping" class="btn btn-success px-4 rounded-4 ms-2">Continue Shopping</a>
        </div>

    </div>

    <% } else { %>
        <p class="text-center text-danger fw-bold">Order not found.</p>
    <% } %>

</div>

<%- include("partials/footer"); %>
