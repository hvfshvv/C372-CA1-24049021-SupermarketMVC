<%- include("partials/header"); %>

<div class="row justify-content-center mt-4 mb-5">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="mb-3 text-center">2-Factor Authentication</h3>

        <p class="text-muted">
          Please open your authenticator app and enter the current 6-digit code
          for your account to finish logging in.
        </p>

        <form action="/2fa/verify" method="POST">
          <div class="mb-3">
            <label class="form-label fw-bold">Authentication Code</label>
            <input type="text" name="token" class="form-control" placeholder="123456" required>
          </div>

          <button class="btn btn-primary w-100 fw-bold">
            Verify & Continue
          </button>
        </form>

        <a href="/login" class="btn btn-link d-block text-center mt-3">
          Back to Login
        </a>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); %>
