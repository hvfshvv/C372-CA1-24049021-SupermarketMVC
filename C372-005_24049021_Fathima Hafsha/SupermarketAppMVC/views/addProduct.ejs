<%- include("partials/header"); %>

<div class="container mt-4" style="max-width: 650px;">

    <h2 class="fw-bold mb-3">Add New Product</h2>

    <form action="/addproduct" method="POST" enctype="multipart/form-data" 
          class="card p-4 shadow-lg rounded-4">

        <div class="mb-3">
            <label class="form-label fw-semibold">Product Name</label>
            <input type="text" name="productName" class="form-control rounded-3" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Quantity</label>
            <input type="number" name="quantity" class="form-control rounded-3" min="0" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Price ($)</label>
            <input type="number" name="price" step="0.01" class="form-control rounded-3" min="0" required>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Category</label>
            <select name="category" class="form-select rounded-3">
                <option>Fruits</option>
                <option>Vegetables</option>
                <option>Dairy</option>
                <option>Bakery</option>
                <option>Beverages</option>
                <option>Snacks</option>
                <option>Other</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Product Image</label>
            <input type="file" name="image" class="form-control rounded-3" required>
        </div>

        <button class="btn btn-success fw-bold rounded-4 px-4 mt-2">Add Product</button>
    </form>

</div>

<%- include("partials/footer"); %>
