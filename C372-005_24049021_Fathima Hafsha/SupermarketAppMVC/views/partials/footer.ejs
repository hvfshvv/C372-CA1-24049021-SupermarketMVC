<!-- Hidden flash messages -->
<div id="flash-error" data-msg='<%- JSON.stringify(messages.error || []) %>'></div>
<div id="flash-success" data-msg='<%- JSON.stringify(messages.success || []) %>'></div>
<div id="flash-stock" data-msg='<%- JSON.stringify(messages.stockError || []) %>'></div>

<script>
    // Read messages from hidden data attributes
    const flashError = JSON.parse(document.getElementById("flash-error").dataset.msg);
    const flashSuccess = JSON.parse(document.getElementById("flash-success").dataset.msg);
    const flashStock = JSON.parse(document.getElementById("flash-stock").dataset.msg);

    if (flashError.length > 0) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: flashError[0]
        });
    }

    if (flashSuccess.length > 0) {
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: flashSuccess[0]
        });
    }

    if (flashStock.length > 0) {
        Swal.fire({
            icon: 'warning',
            title: 'Stock Notice',
            text: flashStock[0]
        });
    }
</script>

