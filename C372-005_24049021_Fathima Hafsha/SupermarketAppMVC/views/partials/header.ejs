<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SupermarketAppMVC</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg shadow-sm sticky-top gradient-navbar">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <i class="bi bi-bag-check-fill me-2 fs-3"></i>
                <span class="fs-3">Supermarket</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbarNav" class="collapse navbar-collapse">
                <!-- LEFT NAV -->
                <ul class="navbar-nav me-auto">

                    <% if (user && user.role === 'admin') { %>

                        <!-- INVENTORY -->
                        <li class="nav-item">
                            <a class="nav-link fs-5" href="/inventory">
                                <i class="bi bi-box-seam me-1"></i> Inventory
                            </a>
                        </li>

                        <!-- ADD PRODUCT -->
                        <li class="nav-item">
                            <a class="nav-link fs-5" href="/addproduct">
                                <i class="bi bi-plus-circle me-1"></i> Add Product
                            </a>
                        </li>

                        <!-- STEP 4: ADMIN VIEW ALL ORDERS -->
                        <li class="nav-item">
                            <a class="nav-link fs-5" href="/admin/orders">
                                <i class="bi bi-clipboard-data me-1"></i> All Orders
                            </a>
                        </li>

                    <% } else { %>

                        <!-- SHOP PAGE -->
                        <li class="nav-item">
                            <a class="nav-link fs-5" href="/shopping">
                                <i class="bi bi-shop-window me-1"></i> Shop
                            </a>
                        </li>

                        <% if (user && user.role === 'user') { %>

                            <!-- CART -->
                            <li class="nav-item">
                                <a class="nav-link fs-5 position-relative" href="/cart">
                                    <i class="bi bi-cart-fill me-1"></i> Cart
                                    <% if (typeof cartCount !== "undefined" && cartCount > 0) { %>
                                        <span class="badge rounded-pill cart-badge"><%= cartCount %></span>
                                    <% } %>
                                </a>
                            </li>

                            <!-- USER ORDERS -->
                            <li class="nav-item">
                                <a class="nav-link fs-5" href="/orders">
                                    <i class="bi bi-receipt-cutoff me-1"></i> My Orders
                                </a>
                            </li>
                        <% } %>

                    <% } %>
                </ul>

                <!-- RIGHT NAV -->
                <ul class="navbar-nav">
                    <% if (user) { %>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center fs-5"
                               href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-2"></i>
                                <span><%= user.username %> (<%= user.role %>)</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3">

                                <li>
                                    <a class="dropdown-item" href="/profile">
                                        <i class="bi bi-person-lines-fill me-2"></i> My Profile
                                    </a>
                                </li>

                                <% if (user.role === "user") { %>
                                    <li>
                                        <a class="dropdown-item" href="/orders">
                                            <i class="bi bi-receipt me-2"></i> My Orders
                                        </a>
                                    </li>
                                <% } %>

                                <% if (!user.twofa_enabled) { %>
                                    <li>
                                        <a class="dropdown-item" href="/2fa/setup">
                                            <i class="bi bi-shield-lock me-2"></i> Set up 2FA
                                        </a>
                                    </li>
                                <% } %>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item text-danger" href="/logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>

                            </ul>
                        </li>

                    <% } else { %>

                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-lg" href="/register">Register</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-light btn-lg" href="/login">Login</a>
                        </li>

                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT CONTAINER -->
    <div class="container py-4">
