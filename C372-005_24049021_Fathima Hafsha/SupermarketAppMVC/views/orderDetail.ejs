<%- include('partials/header'); %>

<h2 class="fw-bold mb-3">Order Details</h2>
<div class="card shadow-sm p-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <p class="mb-1"><strong>Order ID:</strong> #<%= order.id %></p>
            <p class="mb-1"><strong>Date:</strong> <%= new Date(order.order_date).toLocaleString() %></p>
            <p class="mb-1"><strong>Status:</strong> <%= order.payment_status || 'PENDING' %></p>
        </div>
        <div class="col-md-6">
            <p class="mb-1"><strong>Payment Method:</strong> <%= order.payment_method || 'UNKNOWN' %></p>
            <p class="mb-1"><strong>Payment Ref:</strong> <%= order.payment_ref || 'N/A' %></p>
            <% if (latestTxn) { %>
                <p class="mb-1"><strong>Last Transaction:</strong> <%= latestTxn.status %> at <%= new Date(latestTxn.time).toLocaleString() %></p>
            <% } %>
        </div>
    </div>

    <h5 class="fw-bold">Items</h5>
    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(i => { %>
                    <tr>
                        <td><%= i.product_name %></td>
                        <td>$<%= Number(i.price).toFixed(2) %></td>
                        <td><%= i.quantity %></td>
                        <td>$<%= (Number(i.price) * i.quantity).toFixed(2) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <div class="text-end fw-bold">Total: $<%= Number(order.total_amount).toFixed(2) %></div>
</div>

<%- include('partials/footer'); %>
