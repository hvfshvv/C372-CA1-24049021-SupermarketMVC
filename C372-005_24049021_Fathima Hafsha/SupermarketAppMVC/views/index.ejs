<%- include("partials/header"); %>

<style>
    body {
        background: #eef3ff;
    }
    .hero-container {
        width: 85%;
        margin: 40px auto;
        display: flex;
        background: rgb(254, 208, 242);
        border-radius: 25px;
        padding: 40px 50px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        align-items: center;
        gap: 40px;
    }
    .hero-left h5 { color: #7A7FFF; font-weight: 600; }
    .hero-left h1 { font-size: 48px; font-weight: 800; color: #1f1f3d; }
    .hero-left p { color: #4a4a6a; }
    .start-btn {
        padding: 12px 28px;
        background: linear-gradient(90deg, #6a5cff, #4f35ff);
        border-radius: 30px;
        color: white;
        border: none;
        font-weight: 600;
        transition: 0.25s;
    }
    .start-btn:hover { transform: scale(1.05); }

    /* SLIDER */
    .slider-title {
        font-size: 26px;
        font-weight: 700;
        text-align: center;
        margin-top: 45px;
        color: #222047;
    }
    .slider-container {
        margin: 20px auto 60px;
        width: 90%;
        overflow: hidden;
    }
    .slider-track {
        display: flex;
        gap: 25px;
        animation: scroll 18s linear infinite;
    }
    .slider-item {
        background: rgb(201, 194, 244);
        min-width: 180px;
        padding: 18px;
        border-radius: 18px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: 0.25s;
    }
    .slider-item:hover { transform: translateY(-8px); }
    .slider-item img {
        width: 100%;
        height: 140px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>

<!-- HERO -->
<div class="hero-container">
    <div class="hero-left">
        <h5>WELCOME TO</h5>
        <h1>Your Fresh Grocery Store</h1>
        <p>Fast delivery • Quality groceries • Safe checkout.</p>
        <a href="/shopping"><button class="start-btn">Start Shopping</button></a>
    </div>

    <img src="https://cdn-icons-png.flaticon.com/512/3081/3081559.png" class="hero-img" width="380">
</div>

<!-- SLIDER -->
<h2 class="slider-title">Popular Groceries</h2>

<div class="slider-container">
    <div class="slider-track">

        <% if (typeof products !== "undefined" && Array.isArray(products) && products.length > 0) { %>

            <% products.forEach(p => { %>
                <div class="slider-item">
                    <img src="/images/<%= p.image %>" alt="<%= p.productName %>">
                    <h4><%= p.productName %></h4>
                    <p>$<%= p.price %></p>
                </div>
            <% }) %>

            <% products.forEach(p => { %>
                <div class="slider-item">
                    <img src="/images/<%= p.image %>" alt="<%= p.productName %>">
                    <h4><%= p.productName %></h4>
                    <p>$<%= p.price %></p>
                </div>
            <% }) %>

        <% } else { %>
            <div class="text-center w-100">
                <p>No products yet.</p>
            </div>
        <% } %>

    </div>
</div>

<%- include("partials/footer"); %>
