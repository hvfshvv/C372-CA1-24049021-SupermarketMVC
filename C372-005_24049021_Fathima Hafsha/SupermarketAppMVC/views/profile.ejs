<%- include("partials/header"); %>

<div class="profile-header text-center text-white py-5"
     style="background: linear-gradient(90deg,#4f73ff,#7f3dff); border-radius: 12px;">
    <h2 class="fw-bold">My Profile</h2>
    <p>Welcome back, <%= user.username %></p>
</div>

<div class="container my-5" style="max-width: 700px;">

    <div class="card shadow-lg p-4">

        <h4 class="fw-bold mb-3">Personal Information</h4>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" value="<%= user.username %>" disabled>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" value="<%= user.email %>" disabled>
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input class="form-control" value="<%= user.address %>" disabled>
        </div>

        <div class="mb-4">
            <label class="form-label">Contact</label>
            <input class="form-control" value="<%= user.contact %>" disabled>
        </div>

        <% if (!isAdmin) { %>
        <h4 class="fw-bold mb-3">My Activity</h4>

        <div class="d-flex gap-3 mb-4">
            <div class="profile-stat flex-fill">
                <h3><%= stats.totalOrders %></h3>
                <p>Total Orders</p>
            </div>

            <div class="profile-stat flex-fill">
                <h3>$<%= stats.totalSpent.toFixed(2) %></h3>
                <p>Total Spent</p>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a href="/orders" class="btn btn-primary">View Orders</a>
            <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
        </div>
        <% } %>

        <div class="text-center mt-4">
            <a href="/profile/change-password" class="btn btn-warning fw-bold">
                Change Password
            </a>
        </div>

    </div>
</div>

<script>
    const params = new URLSearchParams(window.location.search);
    if (params.get("pwChanged") === "1") {
        const popup = document.createElement("div");
        popup.style.position = "fixed";
        popup.style.top = "50%";
        popup.style.left = "50%";
        popup.style.transform = "translate(-50%, -50%)";
        popup.style.background = "#222";
        popup.style.color = "white";
        popup.style.padding = "35px";
        popup.style.borderRadius = "15px";
        popup.style.textAlign = "center";
        popup.style.boxShadow = "0 4px 25px rgba(0,0,0,0.50)";
        popup.style.width = "320px";
        popup.innerHTML = `<p>Password updated successfully.</p>`;
        document.body.appendChild(popup);

        setTimeout(() => {
            popup.remove();
            window.history.replaceState({}, document.title, "/profile");
        }, 2500);
    }
</script>

<%- include("partials/footer"); %>
